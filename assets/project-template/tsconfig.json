{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    "incremental": true,
    "composite": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
    },
    "esModuleInterop": true
  },
  "files": [
    "./index.ts"
  ],
  "include": [
    "./access-control/**/*",
    "./bootstrap/**/*",
    "./components/**/*",
    "./lib/**/*",
    "./mailer-templates/**/*",
    "./services/**/*",
    "./types/**/*",
  ],
  "exclude": [
    "dist"
  ]
}
